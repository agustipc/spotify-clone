---
import Time from "../icons/Time.astro";
import { type Song } from "../lib/data";

interface Props {
  songs: Song[];
}

const { songs } = Astro.props;
---

<table class="table-auto text-left min-w-full divide-y divide-gray-500/10">
  <thead class="">
    <tr class="text-zinc-300 text-sm ">
      <th class="px-4 py-2 font-light">#</th>
      <th class="px-4 py-2 font-light">Title</th>
      <th class="px-4 py-2 font-light">Album</th>
      <th class="px-4 py-2 font-light" align="right"><Time/></th>
    </tr>
  </thead>
  <tbody>
    <tr class="h-[14px]"></tr>
    {songs.map((song, index) => (
      <tr class="text-gray-300 text-sm font-light hover:bg-white/10 transition duration-300 ">
        <td class="px-4 py-2 w-5 rounded-tl-lg rounded-bl-lg">{index + 1}</td>
        <td class="px-4 py-2 flex gap-3">
          <picture class="">
            <img src={song.image} alt={song.title} class="w-10 h-10 rounded-md">
          </picture>
          <div class="flex flex-col">
            <h3 class="text-white text-base font-normal">{song.title}</h3>
            <span>{song.artists.join(", ")}</span>
          </div>
        </td>
        <td class="px-4 py-2 ">{song.album}</td>
        <td class="px-4 py-2 rounded-tr-lg rounded-br-lg" align="right">{song.duration}</td>
      </tr>
    ))}
  </tbody>
</table>